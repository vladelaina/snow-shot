{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Snow Shot",
    "mainBinaryName": "snowshot",
    "version": "0.2.2-beta-20250831",
    "identifier": "com.chao.snowshot",
    "build": {
        "removeUnusedCommands": true,
        "frontendDist": "../out",
        "devUrl": "http://localhost:8301",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "height": 632,
                "resizable": false,
                "maximizable": false,
                "title": "Snow Shot",
                "width": 1024,
                "center": true,
                "decorations": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "trafficLightPosition": {
                    "x": 16,
                    "y": 16
                },
                "visible": false,
                "backgroundThrottling": "disabled",
                "url": "/"
            }
        ],
        "macOSPrivateApi": true,
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "*",
                    "**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "category": "Utility",
        "shortDescription": "Snow Shot",
        "longDescription": "Simple and elegant screenshot tool",
        "macOS": {
            "minimumSystemVersion": "12.3.0"
        },
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "webviewInstallMode": {
                "silent": true,
                "type": "embedBootstrapper"
            },
            "nsis": {
                "displayLanguageSelector": true,
                "installerIcon": "icons/icon.ico",
                "languages": [
                    "SimpChinese",
                    "TradChinese",
                    "English"
                ]
            }
        },
        "licenseFile": "../LICENSE-Commercial",
        "targets": [
            "nsis",
            "dmg"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": {
            "models/": "models/",
            "ffmpeg/": "ffmpeg/",
            "app-icons/": "app-icons/"
        }
    }
}